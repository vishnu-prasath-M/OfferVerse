# OfferVerse Environment Variables
# Copy this file to .env and fill in your actual values

# --- Database ---
DATABASE_URL=postgresql://user:password@localhost:5432/offerverse

# --- Admin Authentication ---
ADMIN_PASSWORD=your_secure_admin_password_here

# --- Telegram Bot Configuration ---
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL=@your_channel_name

# --- Cuelinks Integration (preserved for future use) ---
CUELINKS_API_KEY=your_cuelinks_api_key_here

# --- Admitad Integration ---
ADMITAD_CLIENT_ID=your_admitad_client_id
ADMITAD_CLIENT_SECRET=your_admitad_client_secret
ADMITAD_ACCESS_TOKEN=your_admitad_access_token
ADMITAD_WEBSITE_ID=your_admitad_website_id
ADMITAD_DEALS_URL=https://api.admitad.com/advcampaigns/website/YOUR_WEBSITE_ID/products/

# --- Amazon Apify Integration ---
AMAZON_DEALS_URL=https://dummy-apify-url

# --- Affiliate Partner IDs ---
AMAZON_PARTNER_TAG=your_amazon_tag
FLIPKART_AFF_ID=your_flipkart_affiliate_id

# --- Application Settings ---
POSTS_PER_DAY=10
DEFAULT_DISCOUNT_THRESHOLD=50
